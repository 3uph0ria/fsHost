@model IEnumerable<Molotok34.Models.Services>
@using Molotok34.Models
@{
    var Services = fsHostEntities.GetContext().Services.ToList();
    var Categoris = fsHostEntities.GetContext().Categoris.ToList();

    @Html.Partial("~/Views/Shared/_Header.cshtml")
    @Html.Partial("~/Views/Shared/_NavTop.cshtml")

    int i = 0;
}


<section class="product-section clearfix">
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-lg-7 col-md-8 ml-auto mr-auto">
                <!-- section title -->
                <div class="section-title title-style-center_text style2">
                    <div class="title-header">
                        <h1 class="mt-4 text-center">Web-хостинг для сайтов</h1>
                        <p class="text-center">
                            Оптимальные соотношение цены и ресурсов.
                            Подойдёт для размещения персональных страниц, блогов и бизнес⁠-⁠сайтов компаний
                        </p>

                    </div>
                </div><!-- section title end -->
            </div>
        </div><!-- row end -->
        <div class="row">
            <div class="col-lg-12">
                <div class="ttm-tabs tabs-for-Services" data-effect="fadeIn">
                    <ul class="tabs clearfix" style="display:flex;">
                        @foreach (var item in Categoris)
                        {
                            if (i == 0)
                            {
                                <li class="tab active btn btn-primary m-2"><a href="#" style="background-color: none; color: #FFF "> @Html.DisplayFor(modelItem => item.Name)</a></li>
                            }
                            else
                            {
                                <li class="tab btn btn-primary m-2"><a href="#" style="background-color: none; color:#FFF"> @Html.DisplayFor(modelItem => item.Name)</a></li>
                            }

                            i++;
                        }
                    </ul>
                    <div class="content-tab">
                        <!-- content-inner -->

                        @{
                            var countProducts = 0;
                        }


                        @foreach (var category in Categoris)
                        {
                            var currentProducts = Services.Where(p => p.IdCategory == category.Id).ToList();


                            if (countProducts == 0)
                            {
                                <div class=" content-inner active">

                                    <div class="Services row">
                                        <!-- product -->

                                        @foreach (var product in currentProducts)
                                        {
                                            <div id="@("product" + countProducts)" class="card" style="width: 18rem;margin:20px">
                                                <div class="card-body">
                                                    <p>@Html.DisplayFor(modelItem => product.Name)</p>
                                                    <h5 class="card-title">@Html.DisplayFor(modelItem => product.Cost)/мес</h5>
                                                    <p>Вы можете сэкономить до 45% выбрав больший срок заказа</p>
                                                </div>
                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item"><b>@Html.DisplayFor(modelItem => product.CountSites)</b> сайтов</li>
                                                    <li class="list-group-item"><b>@Html.DisplayFor(modelItem => product.MemoryGB)</b> ГБ на SSD диске</li>
                                                    <li class="list-group-item">2.2 ГГц процессор</li>
                                                    <li class="list-group-item">
                                                        Панель ISPmanager
                                                    </li>
                                                </ul>
                                                <div class="card-body">
                                                    <a href="/Catalog/Product/@Html.DisplayFor(modelItem => product.Id)" class="btn btn-primary">Заказать</a>
                                                </div>
                                            </div>
                                            {
                                                countProducts++;
                                            }
                                        }
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class=" content-inner" style="display: none;">

                                    <div class="Services row">
                                        <!-- product -->

                                        @foreach (var product in currentProducts)
                                        {
                                            <div id="@("product" + countProducts)" class="card" style="width: 18rem;margin:20px">
                                                <div class="card-body">
                                                    <p>@Html.DisplayFor(modelItem => product.Name)</p>
                                                    <h5 class="card-title">@Html.DisplayFor(modelItem => product.Cost)/мес</h5>
                                                    <p>Вы можете сэкономить до 45% выбрав больший срок заказа</p>
                                                </div>
                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item"><b>@Html.DisplayFor(modelItem => product.CountSites)</b> сайтов</li>
                                                    <li class="list-group-item"><b>@Html.DisplayFor(modelItem => product.MemoryGB)</b> ГБ на SSD диске</li>
                                                    <li class="list-group-item">2.2 ГГц процессор</li>
                                                    <li class="list-group-item">
                                                        Панель ISPmanager
                                                    </li>
                                                </ul>
                                                <div class="card-body">
                                                    <a href="#" class="btn btn-primary">Заказать</a>
                                                </div>
                                            </div>
                                            {
                                                countProducts++;
                                            }
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
