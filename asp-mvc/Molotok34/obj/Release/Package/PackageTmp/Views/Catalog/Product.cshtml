@model Molotok34.Models.Services
@{
    ViewBag.Title = @Html.EditorFor(model => model.Name);

}

@Html.Partial("~/Views/Shared/_Header.cshtml")
@Html.Partial("~/Views/Shared/_NavTop.cshtml")

<!-- single-product-section -->
<section class="single-product-section layout-1 clearfix">
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="ttm-single-product-details">
                    <div class="ttm-single-product-info clearfix">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="summary entry-summary pl-30 res-991-pl-0 res-991-pt-40">
                                    <h1 class="product_title entry-title mt-4">Хостинг</h1>
                                    <div class="" style="display:flex;align-items:center">
                                        <h6 class="m-2">@Html.DisplayFor(model => model.Name)</h6>
                                        <p class="m-2">Диск: <h6 class="m-2">@Html.DisplayFor(model => model.MemoryGB)</h6></p>
                                        <p class="m-2">Сайтов: <h6 class="m-2">@Html.DisplayFor(model => model.CountSites)</h6></p>
                                        <p class="m-2">БД: <h6 class="m-2">∞</h6></p>
                                    </div>

                                    <p class="mt-4">Срок заказа:</p>
                                    <h2 class="product_title entry-title mb-4" id="cost">1 месяц @Html.DisplayFor(model => model.Cost)руб.</h2>



                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <p>Введите данные:</p>
                                        
                                        <div class="md-form mt-2">
                                            <input class="mt-4" type="text" id="Phone" name="Phone" maxlength="50" placeholder="Введите Ваш телефон.." required="">
                                        </div>
                                        <div class="md-form mt-4">
                                            <input class="mt-4" type="text" name="Fullname" id="Fullname" maxlength="50" placeholder="Введите Ваше ФИО.." required="">
                                        </div>
                                        <div class="md-form mt-4">
                                            <button type="submit" class=" mt-4 btn btn-primary">Заказать</button>
                                        </div>
                                    }

                                    @if (TempData["notice"] != null)
                                    {
                                        <div class="alert alert-success alert-dismissible fade show w-100" role="alert">
                                            <p class="m-0">@TempData["notice"]</p>
                                        </div>

                                        TempData["notice"] = null;
                                    }

                                </div>
                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div><!-- row end -->
    </div>
</section>
<section style="background-color: #f0f0f0;">
    <div class="container">
        <h1 class="pt-4">Бесплатно на&nbsp;всех тарифах</h1>
        <div class="row">
            <div class="col-lg-6">
                <ul>
                    <li style="margin: 20px">SSL⁠-⁠сертификат от&nbsp;GlobalSign или&nbsp;Let’s&nbsp;Encrypt</li>
                    <li style="margin: 20px">Защита от&nbsp;DDoS на&nbsp;уровнях L3/L4</li>
                    <li style="margin: 20px">Хранение 30 резервных копий</li>
                    <li style="margin: 20px">Почта для&nbsp;доменов, ∞ ящиков</li>
                    <li style="margin: 20px">Панель управления ISPmanager</li>
                </ul>
            </div>
            <div class="col-lg-6">
                <ul>
                    <li style="margin: 20px">DNS⁠-⁠серверы</li>
                    <li style="margin: 20px">Безлимитный трафик</li>
                    <li style="margin: 20px">Антивирусная проверка</li>
                    <li style="margin: 20px">Доступ по&nbsp;протоколу FTP/SSH</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <h1 class="mt-4">Удобно управлять и администри­ровать</h1>
        <div class="row mb-4">
            <div class="col-lg-4">
                <div class="row">
                    <h5 class="mt-4">
                        Панель управления
                        ISPmanager
                    </h5>
                </div>
                <div class="row">
                    <p class="mt-3">
                        Предоставляем бесплатно одну из лучших панелей управления ISPmanager с файловым менеджером SPRUT.io, также доступны тарифы с cPanel и Plesk
                    </p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="row">
                    <h5 class="mt-4">
                        FTP/SFTP и безопасный
                        SSH⁠-⁠доступ
                    </h5>
                </div>
                <div class="row">
                    <p class="mt-3">
                        Неограниченное количество FTP⁠-⁠аккаунтов и SSH/SFTP⁠-⁠доступ. Добавление SSH⁠-⁠ключей через панель управления
                    </p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="row">
                    <h5 class="mt-4">
                        Функциональный
